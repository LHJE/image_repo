<!DOCTYPE html>
<html>
  <head>
    <title>ShopifyImageRepo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <%= link_to 'Home', root_path %> |
      <%= link_to 'Image Database', '/images' %> |
      <a href="https://github.com/LHJE/shopify_image_repo">GitHub Repo</a> |
      <% if current_user %>
        <%= link_to 'Upload An Image', '/images/new' %> |
        <%= link_to 'Log Out', logout_path %> |
      <% else %>
        <%= link_to 'Register', registration_path %> |
        <%= link_to 'Log In', login_path  %> |
      <% end %>
      <%= form_tag "/search", method: :get do %> <%= text_field_tag :keyword %> <%= submit_tag "Search With One Keyword", class: :button %>
      <% end %>
    </nav>
    <% flash.each do |type, message| %>
      <p><%= message %></p>
    <% end %>
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
