<h1>The Image Repo!</h1>
<% if !current_user %>
  <section class='login'>
    <h2>Please <%= link_to 'Log In', login_path %> or <%= link_to 'Register', registration_path %> if you'd like to Upload an Image!</h2>
  </section>
  <% else %>
  <section class='logged_in'>
    <h2><%= link_to 'Upload An Image', 'images/new' %></h2>
  </section>
<% end %>

<%= render "shared/image_results" %>
