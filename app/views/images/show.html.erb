<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @image.title %>
</p>

<%= image_tag(@image.image, style:'width:100%') if @image.image.attached? %>

<p>
  <strong>Body:</strong>
  <%= @image.body %>
</p>

<p>
  <strong>Keyword:</strong>
  <%= @image.keyword %>
</p>

<% if current_user && current_user.id == @image.user_id %>
  <section class='logged_in'>
    <p><%= link_to 'Edit', edit_image_path(@image) %> |</p>
  </section>
<% end %>
<%= link_to 'Back', images_path %>
