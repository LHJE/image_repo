<h3>The Images, most recent at the top:</h3>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <section id='image-<%= image.id%>'>
          <td><%= image.title %></td>
          <td><%= image.body %></td>
          <td><%= link_to 'Show', image %></td>
          <% if current_user && current_user.id == image.user_id %>
            <section class='logged_in'>
              <td><%= link_to 'Edit', edit_image_path(image) %> </td>
              <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </section>
          <% end %>
        </section>
      </tr>
    <% end %>
  </tbody>
</table>
